<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nawaralqadhy.alqadhynawar2.AnimationActivity">

    <TextView
        android:id="@+id/anim_tv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textAlignment="center"
        android:text="Animation"
        android:textSize="60sp"
        android:background="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:gravity="center"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/anim_alpha"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="alpha"
            />
        <Button
            android:id="@+id/anim_scale"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="scale"
            />
        <Button
            android:id="@+id/anim_rotate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="rotate"
            />
        <Button
            android:id="@+id/anim_trans"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="trans"
            />
        <Button
            android:id="@+id/anim_set"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="set"
            />




    </LinearLayout>


</RelativeLayout>